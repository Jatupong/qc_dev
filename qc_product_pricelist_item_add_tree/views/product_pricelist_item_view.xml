<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--product.pricelist : inherit form view-->
    <record id="view_product_pricelist_item_form_inherited" model="ir.ui.view">
        <field name="name">product.pricelist.item.form.inherited</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//group[3]" position="after">
<!--                     attrs="{'invisible':[('applied_on', '!=', '1_product')]}-->
                     <field name="Test" attrs="{'invisible':[('applied_on', '!=', '1_product')]}">
                        <tree string="Set Order Lines">
                            <field name='product_id'/>
                            <field name='product_cost'/>
                            <field name='commission_cost'/>
                            <field name='box_cost'/>
                            <field name='sticker_cost'/>
                            <field name='cost_1'/>
                            <field name='cost_2'/>
                            <field name='cost_3'/>
                        </tree>
                    </field>
            </xpath>

        </field>
    </record>
</odoo>
