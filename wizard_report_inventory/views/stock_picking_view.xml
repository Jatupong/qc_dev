<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="reference_date_stock_form_view" model="ir.ui.view">
            <field name="name">stock.picking.form.view.reference.date</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_dest_id']" position="before">
                    <field name="reference_date"/>
                </xpath>
                <xpath expr="//field[@name='shipping_mark']" position="before">
                    <field name="petition_number"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
