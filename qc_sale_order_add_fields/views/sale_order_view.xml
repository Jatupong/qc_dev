<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--res.partner : inherit form view-->
    <record id="view_sale_order_add_field" model="ir.ui.view">
        <field name="name">sale.order.add.field</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_bank_id" position="after">
                <field name="fob"  invisible="1"/>
                <field name="incoterm"/>
                <field name="shipping_mark"/>
                <field name="delivery_to"/>
                <field name="logo"/>
            </field>

            <xpath expr="//field[@name='validity_date']" position="after">
                <label for="delivery_week" string="Delivery Week"/>
                <div name="delivery_week">
                    <field name="delivery_week_year" class="oe_inline" placeholder="Week" readonly="1"/>
                    <span>&amp;nbsp;</span>
                    <field name="delivery_week" class="oe_inline" placeholder="Date"/>
                </div>
<!--                <field name="delivery_week"/>-->
            </xpath>

        </field>
    </record>
</odoo>