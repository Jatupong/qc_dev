<openerp>
    <data>

        <record id="action_move_asseet_wizard" model="ir.actions.act_window">
            <field name="name">Move Asset</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.move.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!--            <field name="groups_id" eval="[(4,ref('sales_team.group_sale_salesman'))]"/>-->
            <!-- TODO: check if we need this -->
            <field name="binding_model_id" ref="account_asset.model_account_asset" />
            <field name="binding_view_types">list</field>
        </record>

        <record id="view_account_asset_form_more_field_for_thailand" model="ir.ui.view">
            <field name="name">view.account.asset.more.field</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='main_page']/group" position="inside">
                    <group name="other_info" string="Information">
                        <field name="code" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('asset_type','!=','purchase')]}"/>
                        <field name="barcode" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('asset_type','!=','purchase')]}"/>
                        <field name="serial_number" attrs="{'readonly': [('state', '!=', 'draft')],'invisible': [('asset_type','!=','purchase')]}" />
                        <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')],'invisible': [('asset_type','!=','purchase')]}" options="{'no_create': True}"/>
                        <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')],'invisible': [('asset_type','!=','purchase')]}" options="{'no_create': True}"/>
                        <field name="location_id" options="{'no_create': True}"/>
                        <field name="note" attrs="{'readonly': [('state', '!=', 'draft')],'invisible': [('asset_type','!=','purchase')]}"/>
                        <field name="disposal_type" readonly="1" invisible="1"/>
                    </group>
                </xpath>

                 <field name="journal_id" position="after">
                    <field name="default_salvage_value" attrs="{'invisible': [('state','!=','model')]}"/>
                    <field name="sequence_id" attrs="{'invisible': [('state','!=','model')]}"/>
                </field>

                <button name="validate" position="after">
                    <button name="%(itaas_account_asset_management.action_move_asseet_wizard)d" string="Move Asset"
                            type="action" class="btn-primary" attrs="{'invisible' : [('state','in',('model','close'))]}"/>
                    <button name="generate_sequence" groups="base.group_no_one" states="draft,open" string="Generate Code" type="object" class="oe_highlight"/>
                </button>

                <xpath expr="//notebook" position="inside">
                    <page name="asst_move" string="Asset Movement">
                        <field name="asset_move_ids">
                            <tree>
                                <field name="name"/>
                                <!--                                <field name="asset_name"/>-->
                                <field name="date"/>
                                <field name="from_location_id"/>
                                <field name="to_location_id"/>
                                <field name="from_department_id"/>
                                <field name="to_department_id"/>
                                <field name="from_employee_id"/>
                                <field name="to_employee_id"/>
<!--                                <field name="from_model_id"/>-->
<!--                                <field name="to_model_id"/>-->
                                <field name="amount_depreciation_new"/>
                                <field name="transfer_value"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

        <record id="view_account_asset"  model="ir.ui.view">
            <field name="name">view.account.asset</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_purchase_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="code"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                </field>
            </field>
        </record>

        <record id="view_account_asset_search"  model="ir.ui.view">
            <field name="name">view.account.asset.search</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_search"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="code"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                </field>
            </field>
        </record>




        <record id="view_asset_move_tree" model="ir.ui.view">
            <field name="name">asset.move.tree</field>
            <field name="model">asset.move</field>
            <field name="arch" type="xml">
                <tree string="Asset" create="false">
                    <field name="date"/>
                    <field name="name" />
                    <field name="asset_id"/>
                    <field name="from_location_id"/>
                    <field name="to_location_id"/>
                    <field name="from_department_id"/>
                    <field name="to_department_id"/>
                    <field name="from_employee_id"/>
                    <field name="to_employee_id"/>
                    <field name="from_model_id"/>
                    <field name="to_model_id"/>
                    <field name="amount_depreciation_new"/>
                    <field name="transfer_value"/>
                </tree>
            </field>
        </record>

        <record id="view_asset_move_form" model="ir.ui.view">
            <field name="name">asset.move.form</field>
            <field name="model">asset.move</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group col="2">
                                <field name="date"/>
                                <field name="name" />
                                <field name="asset_id"/>
                                <field name="amount_depreciation_new"/>
                                <field name="transfer_value"/>
                                <field name="type"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="from_location_id" attrs="{'invisible': [('type','!=','0')]}"/>
                                <field name="from_department_id" attrs="{'invisible': [('type','!=','1')]}"/>
                                <field name="from_employee_id" attrs="{'invisible': [('type','!=','2')]}"/>
                                <field name="from_model_id" attrs="{'invisible': [('type','!=','3')]}"/>
                            </group>
                            <group>
                                <field name="to_location_id" attrs="{'invisible': [('type','!=','0')]}"/>
                                <field name="to_department_id" attrs="{'invisible': [('type','!=','1')]}"/>
                                <field name="to_employee_id" attrs="{'invisible': [('type','!=','2')]}"/>
                                <field name="to_model_id" attrs="{'invisible': [('type','!=','3')]}"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_asset_move" model="ir.actions.act_window">
            <field name="name">Asset Movement</field>
            <field name="res_model">asset.move</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
        </record>


        <record id="action_asset_location" model="ir.actions.act_window">
            <field name="name">Asset Location</field>
            <field name="res_model">asset.location</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
        </record>



        <menuitem action="action_asset_location" id="menu_action_asset_location_tree" parent="account.account_account_menu" sequence="30"/>
        <menuitem action="action_asset_move" id="menu_action_asset_move_tree" parent="account.menu_finance_entries_management" sequence="102"/>



    </data>
</openerp>
