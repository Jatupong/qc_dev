<odoo>
    <record id="view_asset_movement_record" model="ir.ui.view">
        <field name="name">Asset Movement</field>
        <field name="model">asset.move.wizard</field>
        <field name="arch" type="xml">
            <form string="Asset Movement">
                <p class="oe_grey">
                    Validate Asset Movement
                </p>
                <group>
                    <group>
                        <field name="from_location_id" readonly="1"/>
                        <field name="from_department_id" readonly="1"/>
                        <field name="from_employee_id" readonly="1"/>
<!--                        <field name="from_model_id" readonly="1"/>-->
                        <field name="date"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="to_location_id"/>
                        <field name="to_department_id"/>
                        <field name="to_employee_id"/>
<!--                        <field name="to_model_id" domain = "[('state', '=', 'model')]"/>-->
                        <field name="company_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_validate" string="Validate" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

