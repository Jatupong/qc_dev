<odoo>

    <!--receive form/tree-->
    <record id="action_move_debit_form" model="ir.actions.act_window">
        <!--        <field name="domain">[('is_debit_note','=',True),('is_debit_invoice','=',True)]</field>-->
        <field name="domain">[('move_type','=','out_invoice'),'|',('is_manual_cn','=',
            True),('is_debit_note','=',True)]
        </field>
        <field name="name">Debit Note</field>
        <field name="res_model">account.move</field>
        <field name="context">{'default_move_type':'out_invoice'}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_debit_note_move_tree_id" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="account.view_invoice_tree"/>
        <field name="act_window_id" ref="action_move_debit_form"/>
    </record>
    <record id="view_debit_note_move_form_id" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account.view_move_form"/>
        <field name="act_window_id" ref="action_move_debit_form"/>
    </record>
    <menuitem action="action_move_debit_form" id="menu_debit_note_invoice" name="Debit Note"
              parent="account.menu_finance_receivables" sequence="2"/>

    <!--pay form/tree-->
    <record id="action_move_vendor_debit_form" model="ir.actions.act_window">
        <field name="domain">[('is_debit_note','=',True),('is_debit_vendor','=',True)]</field>
        <field name="name">Debit Note</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_debit_note_move_vendor_tree_id" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="account.view_invoice_tree"/>
        <field name="act_window_id" ref="action_move_vendor_debit_form"/>
    </record>
    <record id="view_debit_note_move_debit_form_id" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account.view_move_form"/>
        <field name="act_window_id" ref="action_move_vendor_debit_form"/>
    </record>
    <menuitem action="action_move_vendor_debit_form" id="menu_debit_note_vendor" name="Debit Note"
              parent="account.menu_finance_payables" sequence="1"/>

    <record id="view_account_debit_note" model="ir.ui.view">
        <field name="name">account.debit.note</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!--            <field name="partner_shipping_id" position="after">-->
            <!--                <field name="is_debit_note" invisible="1"/>-->
            <!--            </field>-->

            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="is_debit_note"/>
                <field name="is_debit_vendor"/>
            </xpath>
        </field>
    </record>

</odoo>




