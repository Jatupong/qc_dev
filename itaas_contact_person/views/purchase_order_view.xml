<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_purchase_order_form_contact" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field eval="12" name="priority" />
        <field name="arch" type="xml">

            <xpath expr="//sheet/group/group[1]/field[@name='partner_id']" position="after">
                <field name="contact_id" domain="[('parent_id','=',partner_id)]" options="{'no_create': True, 'no_create_edit':True}"/>
            </xpath>

        </field>
    </record>

</odoo>
