<odoo>

    <record id="view_sale_order_form_contact" model="ir.ui.view">
        <field name="name">sale.order.form.contact</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field eval="12" name="priority" />
        <field name="arch" type="xml">

            <xpath expr="//sheet/group/group[1]/field[@name='partner_id']" position="after">
                <field name="contact_id" domain="[('parent_id','=',partner_id),('type','=','contact')]"
                       options="{'no_create': True, 'no_create_edit':True}"/>
            </xpath>

        </field>
    </record>

