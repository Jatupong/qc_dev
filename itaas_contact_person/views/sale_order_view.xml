<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_sale_order_form_contact" model="ir.ui.view">
        <field name="name">sale.order.form.contact</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field eval="12" name="priority" />
        <field name="arch" type="xml">

            <xpath expr="//sheet/group/group[1]/field[@name='partner_id']" position="after">
                <field name="contact_id" domain="[('parent_id','=',partner_id),('type','=','contact')]"
                       options="{'no_create': True, 'no_create_edit':True}"/>
            </xpath>

        </field>
    </record>

    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm']" position="attributes">
                        <attribute name="attrs">{'invisible': [('state','not in',['draft','sent','check_delivery','delivery_confirm','pp_confirm','sale','production','done','cancel'])]}</attribute>
                </xpath>
<!--            <xpath expr="//button[@name='action_confirm']" position="replace">-->
<!--                <attribute name="statusbar_visible">draft,sent,sale,production</attribute>-->
<!--            </xpath>-->

        </field>
    </record>


</odoo>
