<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_account_move_form_contact" model="ir.ui.view">
        <field name="name">account.move.form.contact</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field eval="12" name="priority" />
        <field name="arch" type="xml">

            <xpath expr="//sheet/group/group[1]/field[@name='partner_id']" position="after">
                <field name="contact_id" domain="[('parent_id','=',partner_id)]" options="{'no_create': True, 'no_create_edit':True}"/>
            </xpath>

        </field>
    </record>

</odoo>
