<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_wizard_stock_card_report_form" model="ir.ui.view">
		<field name="name">Stock Card Multi Select</field>
		<field name="model">wizard.stock.card.report</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="date_from"/>
						<field name="date_to"/>
					</group>
					<group>
						<field name="category_id"/>
						<field name="product_ids" widget="many2many_tags" string="Product"/>
					</group>
					<group>
						<field name="company_id" invisible="1"/>
						<field name="location_ids" widget="many2many_tags" domain="['|',('usage', '=', 'view'),('usage', '=', 'internal')]"/>
					</group>
				</group>
				<footer>
					<!--<button name="print_report_pdf" string="พิมพ์(PDF)" type="object" default_focus="1" class="oe_highlight"/>-->
					<button name="print_report_excel" string="PRINT(Excel)" type="object" default_focus="1" class="oe_highlight"/>
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_wizard_stock_card_report" model="ir.actions.act_window">
		<field name="name">Stock Card Multi Select</field>
		<field name="res_model">wizard.stock.card.report</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_wizard_stock_card_report_form"/>
		<field name="target">new</field>
	</record>

	<menuitem id="menu_product_transfer_report"
			  name="Stock Card Multi Select"
			  action="action_wizard_stock_card_report"
			  parent="stock.menu_warehouse_report"
			  sequence="99"/>

</odoo>
