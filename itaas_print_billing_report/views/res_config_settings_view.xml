<odoo>

    <record id="res_config_settings_view_form_billing_report" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.billing.report</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@data-key='account']" position="inside">
                <h2 class="mt32">Billing Reports</h2>
                <div class="row mt16 o_settings_container" id="connectors_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="billing_no_form">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Billing No. Form</span>
                            <div class="text-muted">
                                <field name="billing_no_form"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="show_currency_on_billing">
                        <div class="o_setting_left_pane">
                            <field name="show_currency_on_billing" widget="upgrade_boolean"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Show Currency in Billing</span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="payment_info">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Payment Info</span>
                            <div class="text-muted">
                                <field name="payment_info"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="show_date_auto_billing">
                        <div class="o_setting_left_pane">
                            <field name="show_date_auto_billing" widget="upgrade_boolean"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Show Date Billing</span>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>