<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_edit_create_inv_bt_in_sale_order" model="ir.ui.view">
            <field name="name">sale.order.edit.create.invoice.button</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button id="create_invoice" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('invoice_status', '!=', 'to invoice'),('state', 'not in', ['production','sale'])]}</attribute>
                </button>
            </field>
        </record>
    </data>
</odoo>