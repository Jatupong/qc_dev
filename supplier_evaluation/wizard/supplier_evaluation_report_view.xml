<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_wizard_supplier_evaluation" model="ir.ui.view">
		<field name="name">Supplier Assessment Report</field>
		<field name="model">wizard.suplier.evaluation</field>
		<field name="arch" type="xml">
			<form string="Suplier Evaluation Reports">
				<group>
					<group>
						<field name="year" required="1"/>
						<field name="date_from" required="1" invisible="1"/>
						<field name="date_to" required="1" invisible="1"/>
						<field name="total_supplier_ids" invisible="1" widget="many2many_tags" />
						<field name="partner_ids" domain="[('id','=',total_supplier_ids)]"
							   widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
					</group>
					<group>
						<field name="evaluate_by" options="{'no_create': True, 'no_create_edit': True}"/>
						<field name="validate_by" options="{'no_create': True, 'no_create_edit': True}"/>
						<field name="company_id" options="{'no_create': True, 'no_create_edit': True}" invisible="1"/>
					</group>
				</group>
				<footer>
					<button name="print_pdf_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
					or
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_wizard_supplier_evaluation" model="ir.actions.act_window">
		<field name="name">Supplier Assessment Report</field>
		<field name="res_model">wizard.suplier.evaluation</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_wizard_supplier_evaluation"/>
		<field name="target">new</field>
	</record>

