    <record id="paperformat_A4_Zero_Margin_product_bill06" model="report.paperformat">
        <field name="name">A4_Zero_Margin_product_bill06</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">95</field>
        <field name="margin_bottom">90</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">90</field>
        <field name="dpi">90</field>
    </record>

    <report
            id="bill_of_lading"
            model="stock.picking"
            menu="True"
            report_type="qweb-pdf"
            string="ใบเบิกพัสดุ"
            paperformat="paperformat_A4_Zero_Margin_product_bill06"
            name="itaas_print_inventory_report.bill_of_lading_id"
