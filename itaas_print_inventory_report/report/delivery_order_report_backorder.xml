<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="delivery_order_report_backorder_id">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <div class="header">
                    <style>
                        @font-face
                        {
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_inventory_report/static/THSarabun.ttf")
