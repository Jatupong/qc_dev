<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.view.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/div[4]" position="after">
                <h2 name="config_new">Configuration</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-6 col-lg-6 o_setting_box" id="iface_invoicing_1">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <div class="row mt16">

                                    <label  for="license_number" class="col-lg-3 o_light_label"/>
                                    <field name="license_number"/>
                                </div>
                                <div class="row mt16">

                                    <label  for="operating_unit_id" class="col-lg-3 o_light_label"/>
                                    <field name="operating_unit_id"/>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="col-6 col-lg-6 o_setting_box" id="iface_invoicing_1">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <div class="row mt16">
                                    <label  for="pos_number" class="col-lg-3 o_light_label"/>
                                    <field name="pos_number"/>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-6 col-lg-6 o_setting_box" id="iface_invoicing_1">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <div class="row mt16">
                                    <label  for="refund_sequence_id" class="col-lg-3 o_light_label"/>
                                    <field name="refund_sequence_id"/>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>



            </xpath>
        </field>
    </record>

</odoo>
