<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_wizard_deposit_report_form" model="ir.ui.view">
		<field name="name">รายละเอียดเงินมัดจำลูกหนี้</field>
		<field name="model">wizard.deposit.report</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="date_from"/>
						<field name="date_to"/>
					</group>
					<group>
						<field name="partner_ids" widget="many2many_tags" string="Partners"/>
						<field name="company_id" invisible="1"/>
					</group>
				</group>
				<footer>
					<button name="print_report_pdf" string="PRINT(PDF)" type="object" default_focus="1" class="oe_highlight"/>
					<button name="print_report_excel" string="PRINT(Excel)" type="object" default_focus="1" class="oe_highlight"/>
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_wizard_deposit_report" model="ir.actions.act_window">
		<field name="name">รายละเอียดเงินมัดจำลูกหนี้</field>
		<field name="res_model">wizard.deposit.report</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_wizard_deposit_report_form"/>
		<field name="target">new</field>
	</record>
	<menuitem id="menu_deposit_report"
			  name="รายละเอียดเงินมัดจำลูกหนี้"
			  action="action_wizard_deposit_report"
			  parent="account.menu_finance_reports"
			  sequence="99"/>

</odoo>
