                        }
                        .font_size_28{
                        font-size: 28px;
                        line-height: 26px;
                        }
                        .font_size_22{
                        font-size: 22px;
                        line-height: 20px;
                        }
                        .font_size_20{
                        font-size: 20px;
                        line-height: 18px;
                        }
                        .font_size_18{
                        font-size: 18px;
                        line-height: 16px;
                        }
                        .font_size_16{
                        font-size: 16px;
                        line-height: 14px;
                        }
                        .font_size_14{
                        font-size: 14px;
                        line-height: 12px;
                        }
