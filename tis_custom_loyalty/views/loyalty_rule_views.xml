<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="loyalty_rule_view_form" model="ir.ui.view">
        <field name="name">loyalty.rule.pos.loyalty</field>
        <field name="model">loyalty.rule</field>
        <field name="inherit_id" ref="loyalty.loyalty_rule_view_form"/>
        <field name="arch" type="xml">
            <field name="product_domain" position="attributes">
                <!--<attribute name="groups"> </attribute>-->
            </field>
            <field name="product_domain" position="after">
                <field name="partner_domain" widget="domain"
                       options="{'model': 'res.partner', 'in_dialog': true}"/>
                <field name="valid_partner_ids" widget="many2many_tags" invisible="1"/>
                <field name="any_partner" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
