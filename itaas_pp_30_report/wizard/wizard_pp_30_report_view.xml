<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_wizard_pp_30_report_form" model="ir.ui.view">
		<field name="name">PP 30 Report</field>
		<field name="model">wizard.pp.30.report</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="month_from"/>
						<field name="month_to"/>
						<field name="year" placeholer="B.E."/>
						<field name="company_id" invisible="1"/>
					</group>
					<group groups="base.group_no_one">
						<field name="date_from"/>
						<field name="date_to"/>
						<field name="journal_export_id"/>
						<field name="journal_internal_id"/>
						<field name="journal_shop_sale_id"/>
					</group>
					</group>
				<footer>
					<button name="print_report_pdf" string="PRINT(PDF)" type="object" default_focus="1" class="oe_highlight"/>
					<button name="print_report_excel" string="PRINT(Excel)" type="object" default_focus="1" class="oe_highlight"/>
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_wizard_pp_30_report_report" model="ir.actions.act_window">
		<field name="name">สรุปแบบ ภพ. 30</field>
		<field name="res_model">wizard.pp.30.report</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_wizard_pp_30_report_form"/>
		<field name="target">new</field>
	</record>

	<menuitem id="menu_pp_30_report"
			  name="สรุปแบบ ภพ. 30"
			  action="action_wizard_pp_30_report_report"
			  parent="account.menu_finance_reports"
			  sequence="99"/>

</odoo>
