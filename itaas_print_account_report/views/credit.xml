<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- res.users : inherit views -->
    <record id="view_account_credit" model="ir.ui.view">
        <field name="name">view.account.credit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="after">
                <field string="credit" name="account_move_credit"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_move_credit']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>