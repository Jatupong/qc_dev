<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_wizard_multi_create_mo_form" model="ir.ui.view">
		<field name="name">Create manufacturing order</field>
		<field name="model">wizard.multi.create.mo</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<p class="oe_grey">
                        Selected order will be created.
                    </p>
				</group>
				<footer>
					<button name="action_create_mo" string="Create" type="object" default_focus="1" class="oe_highlight"/>
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_wizard_multi_create_mo_report" model="ir.actions.act_window">
		<field name="name">Create manufacturing order</field>
		<field name="res_model">wizard.multi.create.mo</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_wizard_multi_create_mo_form"/>
		<field name="target">new</field>
		<!-- TODO: check if we need this -->
		<field name="binding_model_id" ref="manufacturing_production_request.model_manufacturing_request_custom" />
		<field name="binding_view_types">form,list</field>
	</record>

</odoo>
