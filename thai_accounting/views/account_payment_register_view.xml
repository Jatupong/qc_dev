        <!-- inherit account.payment form -->
        <record id="view_account_payment_register_form_itaas_inherit" model="ir.ui.view">
            <field name="name">account.payment.register.form.itaas.inherit</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//form/group/group[2]" position="replace">
                    <group name="group2">
                        <label for="amount" />
                        <div name="amount_div" class="o_row">
                            <field name="amount"/>
                            <field name="currency_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency"/>
                        </div>
                        <field name="payment_date"/>
                        <field name="communication"/>
                    </group>
                </xpath>
                <xpath expr="//form/group/group[3]" position="replace">
                    <group name="group3"
                           attrs="{'invisible': ['|', ('payment_difference', '=', 0.0), '|', ('can_edit_wizard', '=', False), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}"
                           groups="account.group_account_readonly">
                        <label for="payment_difference"/>
                        <div>
                            <field name="payment_difference"/>
                            <field name="payment_difference_handling" widget="radio" nolabel="1"/>
                            <div attrs="{'invisible': [('payment_difference_handling','=','open')]}">
                                <label for="writeoff_account_id" string="Post Difference In" class="oe_edit_only"/>
                                <field name="writeoff_account_id"
                                       string="Post Difference In"
                                       options="{'no_create': True}"
                                       attrs="{'required': [('payment_difference_handling', '=', 'reconcile'),('payment_option', '=', 'full')]}"/>
                                <label for="writeoff_label" class="oe_edit_only" string="Label"/>
                                <field name="writeoff_label" attrs="{'required': [('payment_difference_handling', '=', 'reconcile'),('payment_option', '=', 'full')]}"/>
                            </div>
                        </div>
                    </group>
                </xpath>
                <xpath expr="//form/group[1]" position="before">
                    <field name="payment_option"/>
                                            <field name="post_diff_acc" invisible="1"/>
                    <!--                        <field name="require_write_off" invisible="1"/>-->
                    <field name="writeoff_multi_acc_ids" nolabel="1" attrs="{'invisible': [('post_diff_acc', '=', 'single')]}">
                        <!--                            <tree editable="top" create="0">-->
                        <tree string="Post Difference Accounts" editable="bottom" create="1">
                            <field name="deduct_item_id" domain="[('wht','=',True)]"/>
                            <field name="writeoff_account_id"/>
                            <!--<field name="department_id"/>-->
                            <field name="name" required="1"/>
                            <field name="wht" invisible="1"/>
                            <field name="wht_type"/>
                            <field name="amount_untaxed" attrs="{'required': [('wht','=',True)]}"/>
                            <field name="amt_percent" sum="Total %" attrs="{'required': [('wht','=',True)]}"/>
                            <field name="amount" sum="Total Amount"/>
                            <field name="currency_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency"/>
                        </tree>
                    </field>
                </xpath>

                <xpath expr="//group[@name='group3']" position="after">
                    <!--                    <group name="cheque_info" invisible="context.get('active_model') == 'account.move'">-->
                    <group name="cheque_info">

                        <field name="bank_cheque" invisible="1"/>
                        <field name="cheque_bank" attrs="{'invisible':[('bank_cheque','=',False)]}"/>
                        <field name="cheque_branch" attrs="{'invisible':[('bank_cheque','=',False)]}"/>
                        <field name="cheque_number" attrs="{'invisible':[('bank_cheque','=',False)]}"/>
                        <field name="cheque_date" attrs="{'invisible':[('bank_cheque','=',False)]}"/>
<!--                         <field name="cheque_bank" attrs="{'required':[('bank_cheque','=',True)],'invisible':[('bank_cheque','=',False)]}"/>-->
<!--                        <field name="cheque_branch" attrs="{'required':[('bank_cheque','=',True)],'invisible':[('bank_cheque','=',False)]}"/>-->
<!--                        <field name="cheque_number" attrs="{'required':[('bank_cheque','=',True)],'invisible':[('bank_cheque','=',False)]}"/>-->
<!--                        <field name="cheque_date" attrs="{'required':[('bank_cheque','=',True)],'invisible':[('bank_cheque','=',False)]}"/>-->
                        <field name="remark"/>
                        <!--                        <field name="cheque_reg_id" attrs="{'invisible': [('bank_cheque','=',False)],'readonly': [('state','!=','draft')]}"/>-->
                    </group>
                </xpath>

            </field>
        </record>


