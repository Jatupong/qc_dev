<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_wizard_sale_report_form" model="ir.ui.view">
		<field name="name">Sale Report</field>
		<field name="model">wizard.sale.report</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="date_from"/>
						<field name="company_id" invisible="1"/>
						<field name="team_id"/>
						<field name="partner_id"/>
					</group>
					<group>
						<field name="date_to"/>
						<field name="product_ids" widget="many2many_tags"/>
						<field name="product_category_ids" widget="many2many_tags"/>
						<field name="currency_id"/>
					</group>
				</group>
				<footer>
					<button name="print_report_excel" string="PRINT(Excel)" type="object" default_focus="1" class="oe_highlight"/>
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_wizard_sale_report" model="ir.actions.act_window">
		<field name="name">Sale Report</field>
		<field name="res_model">wizard.sale.report</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_wizard_sale_report_form"/>
		<field name="target">new</field>
	</record>

	<menuitem id="menu_sale_report"
			  name="Sale Report"
			  action="action_wizard_sale_report"
			  parent="sale.menu_sale_report"
			  sequence="99"/>

</odoo>
