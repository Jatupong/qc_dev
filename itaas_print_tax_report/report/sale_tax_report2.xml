<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <template id="sale_tax_report_id2">
        <t t-set="i" t-value="1"/>
        <t t-call="web.basic_layout">

            <div class="header" style="font-family:TH SarabunPSK;">
                <div class="col-xs-2" style="text-align:right">
                    <!--                    <td style="text-align: right;">-->
                    <font style="font-size: 16px;">
                        <span>หน้า</span>
                        <span class="page"/>
                        <span>/</span>
                        <span class="topage"/>
                    </font>
                    <!--                        </td>-->
                </div>
                <div class="col-xs-12" style="text-align: center">
                    <font style="font-size: 16px;">
                        <h>
                            <strong>
                                <span t-esc="company_id.name"/>
                                <br/>รายการส่งออกประจำเดือน!
                            </strong>
                        </h>
                        <br/>
                        <br/>
                        <tr>
                            <td style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <span>ชื่อผู้ประกอบการ</span>
                                </font>
                            </td>
                            <td style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <span t-esc="company_id.name"/>
                                </font>
                            </td>
                            <td style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <span>เลขประจำตัวผู้เสียภาษีอากร</span>
                                </font>
                            </td>
                            <td style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <span t-esc="company_id.vat"/>
                                </font>
                            </td>
                        </tr>
                        <br/>
                        <tr>
                            <td style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <span>ชื่อสถานประกอบการ</span>
                                </font>
                            </td>
                            <td style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <span t-esc="company_id.name"/>
                                </font>
                            </td>
                            <td colspan="2" style="text-align: left;">
                                <t t-if="not operating_unit">
                                    <t t-if="company_id.branch_no">
                                        <t t-if="company_id.branch_no == '00000'">
                                            <font style="font-size: 22px;">
                                                &amp;#9746;
                                            </font>
                                            <font style="font-size: 16px;">
                                                <span>สำนักงานใหญ่</span>&amp;emsp;
                                            </font>
                                            <font style="font-size: 22px;">
                                                &amp;#9744;
                                            </font>
                                            <font style="font-size: 16px;">
                                                <span>สาขาที่</span>&amp;ensp;
                                            </font>
                                        </t>
                                        <t t-if="company_id.branch_no != '00000'">
                                            <font style="font-size: 22px;">
                                                &amp;#9744;
                                            </font>
                                            <font style="font-size: 16px;">
                                                <span>สำนักงานใหญ่</span>&amp;emsp;
                                            </font>
                                            <font style="font-size: 22px;">
                                                &amp;#9746;
                                            </font>
                                            <font style="font-size: 16px;">
                                                <span>สาขาที่</span>&amp;ensp;
                                                <span t-esc="company_id.branch_no"/>
                                            </font>
                                        </t>
                                    </t>
                                    <t t-if="not company_id.branch_no">
                                        <font style="font-size: 22px;">
                                            &amp;#9746;
                                        </font>
                                        <font style="font-size: 16px;">
                                            <span>สำนักงานใหญ่</span>&amp;emsp;
                                        </font>
                                        <font style="font-size: 22px;">
                                            &amp;#9744;
                                        </font>
                                        <font style="font-size: 16px;">
                                            <span>สาขาที่</span>&amp;ensp;
                                        </font>
                                    </t>

                                </t>
                                <!--################# if OU-->
                                <t t-if="operating_unit">
                                    <font style="font-size: 22px;">
                                        &amp;#9744;
                                    </font>
                                    <font style="font-size: 16px;">
                                        <span>สำนักงานใหญ่</span>&amp;emsp;
                                    </font>
                                    <font style="font-size: 22px;">
                                        &amp;#9746;
                                    </font>
                                    <font style="font-size: 16px;">
                                        <span>สาขาที่</span>&amp;ensp;
                                        <t t-foreach="operating_unit" t-as="operating_id">
                                            <span t-esc="operating_id"/>
                                        </t>
                                    </font>

                                </t>

                            </td>
                        </tr>
                        <br/>
                        <tr>
                            <td style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <span>สถานประกอบการ</span>
                                </font>
                            </td>
                            <td colspan="2" style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <t t-if="company_id">
                                        <span t-esc="company_id.get_company_full_address_text()"/>

                                    </t>
                                </font>
                            </td>

                        </tr>
                    </font>

                </div>

            </div>
            <div class="page">

                <t t-set="width1" t-value="50"/>
                <t t-set="width2" t-value="50"/>
                <t t-set="width3" t-value="50"/>
                <t t-set="width5" t-value="50"/>
                <t t-set="width6" t-value="50"/>
                <t t-set="width7" t-value="50"/>
                <t t-set="width8" t-value="50"/>
                <t t-set="width9" t-value="50"/>
                <t t-set="width10" t-value="50"/>
                <t t-set="width11" t-value="50"/>
                <t t-set="width12" t-value="50"/>
                <t t-set="width13" t-value="50"/>
                <t t-set="width14" t-value="50"/>
                <t t-set="width15" t-value="50"/>
                <t t-set="width16" t-value="50"/>
                <t t-set="width17" t-value="50"/>

                <style>
                    .box1{word-wrap: break-word;width:<t t-esc="width1"/>px;}
                    .box2{word-wrap: break-word;width:<t t-esc="width2"/>px;}
                    .box3{word-wrap: break-word;width:<t t-esc="width3"/>px;}
                    .box4{word-wrap: break-word;width:<t t-esc="width4"/>px;}
                    .box5{word-wrap: break-word;width:<t t-esc="width5"/>px;}
                    .box6{word-wrap: break-word;width:<t t-esc="width6"/>px;}
                    .box7{word-wrap: break-word;width:<t t-esc="width7"/>px;}
                    .box8{word-wrap: break-word;width:<t t-esc="width8"/>px;}
                    .box9{word-wrap: break-word;width:<t t-esc="width9"/>px;}
                    .box10{word-wrap: break-word;width:<t t-esc="width10"/>px;}
                    .box11{word-wrap: break-word;width:<t t-esc="width11"/>px;}
                    .box12{word-wrap: break-word;width:<t t-esc="width12"/>px;}

                    .box13{word-wrap: break-word;width:<t t-esc="width13"/>px;}
                    .box14{word-wrap: break-word;width:<t t-esc="width14"/>px;}
                    .box15{word-wrap: break-word;width:<t t-esc="width15"/>px;}
                    .box16{word-wrap: break-word;width:<t t-esc="width16"/>px;}
                    .box17{word-wrap: break-word;width:<t t-esc="width17"/>px;}

                    table.table-bordered {
                    margin-top:20px;
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered &gt; thead &gt; tr &gt; th{
                    border:1px solid black;
                    vertical-align :middle;
                    text-align:center;
                    padding:3px;
                    }
                    table.table-bordered &gt; tbody &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered &gt; tfoot &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }
                </style>

                <div class="content">
                    <table class="table-bordered" width="100%">
                        <thead style="font-size: 14px;">
                            <tr>
                                <th colspan="1" rowspan="2">
                                    <span>วันที่</span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>เลขที่<br/>Invoice No.
                                    </span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>รายการ<br/>Customer
                                    </span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>จำนวนชิ้น</span>
                                </th>
                                <th colspan="6">
                                    <span>ตามส่งจริง</span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>EXC<br/>RATE
                                    </span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>BAHT</span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>ตามใบขน<br/>EUR/USD
                                    </span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>EXC<br/>RATE
                                    </span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>BAHT</span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>เลขที่ใบขน</span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>ETD</span>
                                </th>
                                <th colspan="1" rowspan="2">
                                    <span>ETA</span>
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    <div class="box5">
                                        <span>EUR</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="box6">
                                        <span>USD</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="box7">
                                        <span>GBP</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="box8">
                                        <span>CNY</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="box9">
                                        <span>THB</span>
                                    </div>
                                </th>
                                <th>
                                    <div class="box10">
                                        <span>Other</span>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody" style="font-size: 12px;">
                            <t t-set="sum_untaxed" t-value="0"/>
                            <t t-set="sum_vat" t-value="0"/>
                            <t t-set="sum_total" t-value="0"/>
                            <t t-foreach="docs" t-as="k">
                                <tr>
                                    <td>

                                        <t t-if="k['date']">
                                            <span t-esc="k['date']"
                                                  t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>
                                        </t>

                                    </td>
                                    <td>

                                        <span t-esc="k['name']"/>

                                    </td>
                                    <td>

                                        <t t-if="k['partner']">
                                            <span t-esc="k['partner']"/>
                                        </t>

                                    </td>
                                    <td>
                                        <div class="box6" align="right">
                                            <t t-if="k['quantity']">
                                                <span t-esc="k['quantity']"
                                                      t-options='{"widget": "float", "precision": 0}'/>
                                            </t>
                                        </div>
                                    </td>
                                    <!--                                    EUR-->
                                    <td>
                                        <div class="box7">
                                            <t t-if="k['amount_type'] == 'EUR'">
                                                <span t-esc="'{0:,.2f}'.format(float(k['amount_total']))"/>
                                            </t>
                                            <t t-if="k['amount_type'] != 'EUR'">
                                                <span></span>
                                            </t>
                                        </div>
                                    </td>
                                    <!--                                    USD-->
                                    <td>
                                        <div class="box8">
                                            <t t-if="k['amount_type'] == 'USD'">
                                                <span t-esc="'{0:,.2f}'.format(float(k['amount_total']))"/>
                                            </t>
                                            <t t-if="k['amount_type'] != 'USD'">
                                                <span></span>
                                            </t>
                                        </div>
                                    </td>
                                    <!--                                    GBP-->
                                    <td>
                                        <div class="box9">
                                            <t t-if="k['amount_type'] == 'GBP'">
                                                <span t-esc="'{0:,.2f}'.format(float(k['amount_total']))"/>
                                            </t>
                                            <t t-if="k['amount_type'] != 'GBP'">
                                                <span></span>
                                            </t>
                                        </div>
                                    </td>
                                    <!--                                    CNY-->
                                    <td>
                                        <div class="box10">
                                            <t t-if="k['amount_type'] == 'CNY'">
                                                <span t-esc="'{0:,.2f}'.format(float(k['amount_untaxed']))"/>
                                            </t>
                                            <t t-if="k['amount_type'] != 'CNY'">
                                                <span></span>
                                            </t>
                                        </div>
                                    </td>
                                    <!--                                    THB -->
                                    <td align="right">
                                        <div class="box11">
                                            <t t-if="k['amount_type'] == 'THB'">
                                                <span t-esc="'{0:,.2f}'.format(float(k['amount_total']))"/>
                                            </t>
                                            <t t-if="k['amount_type'] == 'THB'">
                                                <span></span>
                                            </t>
                                        </div>
                                    </td>
                                    <!--                                    Other-->
                                    <td>
                                        <div class="box12">
                                            <t t-if="k['amount_type'] != 'THB' and k['amount_type'] != 'CNY' and k['amount_type'] != 'GBP' and k['amount_type'] != 'USD' and k['amount_type'] != 'EUR'">
                                                <span t-esc="'{0:,.2f}'.format(float(k['amount_total']))"/>
                                            </t>

                                        </div>
                                    </td>
                                    <!--                                    EXC RATE-->
                                    <td>
                                        <div class="box12">
                                            <t t-if="k['company_rate']">
                                                <span t-esc="'{0:,.4f}'.format(float(k['company_rate']))"/>
                                            </t>
                                        </div>
                                    </td>
                                    <!--                                    BATH-->
                                    <td>
                                        <t t-if="k['amount_type'] == 'THB'">
                                            <span t-esc="'{0:,.2f}'.format(float(k['amount_total'] * k['company_rate']))"/>
                                        </t>
                                        <t t-if="k['amount_type'] != 'THB'">
                                            <span t-esc="'{0:,.2f}'.format(float(k['amount_total'] * k['company_rate']))"/>
                                        </t>
                                    </td>
                                    <!--                                    ตามใบขน EUR/USD-->
                                    <td>
                                        <div class="box14">
                                            <span t-esc="'{0:,.2f}'.format(float(k['amount_total']))"/>
                                        </div>
                                    </td>
                                    <!--                                    EXC RATE-->
                                    <td>
                                        <div class="box15">
                                            <t t-if="k['excrate']">
                                                <span t-esc="'{0:,.4f}'.format(float(k['excrate']))"/>
                                            </t>
                                        </div>
                                    </td>
                                    <!--                                    BAHT-->
                                    <td>
                                        <t t-if="k['amount_type'] == 'THB'">
                                            <span t-esc="'{0:,.2f}'.format(float(k['amount_total'] * k['excrate']))"/>
                                        </t>
                                        <t t-if="k['amount_type'] != 'THB'">
                                            <span t-esc="'{0:,.2f}'.format(float(k['amount_total'] * k['excrate']))"/>
                                        </t>
                                    </td>
                                    <!--                                    เลขใบขน-->
                                    <td>
                                        <div class="box17">
                                            <t t-if="k['export_products_id']">
                                                <span t-esc="k['export_products_id']"/>
                                            </t>
                                        </div>
                                    </td>
                                    <!--                                    ETD-->
                                    <td>
                                        <t t-if="k['ETD']">
                                            <span t-esc="k['ETD']"
                                                  t-options="{'widget': 'date', 'format': 'dd/MM/yyy'}"/>
                                        </t>
                                    </td>
                                    <!--                                    ETA-->
                                    <td>
                                        <t t-if="k['ETA']">
                                            <span t-esc="k['ETA']"
                                                  t-options="{'widget': 'date', 'format': 'dd/MM/yyy'}"/>
                                        </t>
                                    </td>
                                </tr>
                            </t>


                        </tbody>

                    </table>
                </div>
                <div class="last-page">

                </div>

            </div>
        </t>
    </template>
</openerp>
