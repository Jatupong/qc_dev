<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- payment method -->
        <record id="view_payment_method_type_tree" model="ir.ui.view">
            <field name="name">payment.method.type.tree</field>
            <field name="model">payment.method.type</field>
            <field name="arch" type="xml">
                <tree string="Payment Method">
                    <field name="name"/>
                    <field name="level"/>
                </tree>
            </field>
        </record>

        <record id="view_payment_method_type_form" model="ir.ui.view">
            <field name="name">payment.method.type.form</field>
            <field name="model">payment.method.type</field>
            <field name="arch" type="xml">
                <form string="Payment Method">
                    <group>
                        <field name="name"/>
                        <field name="level"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_payment_method_type" model="ir.actions.act_window">
            <field name="name">Payment Method</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.method.type</field>

            <field name="view_id" ref="view_payment_method_type_tree"/>
        </record>

        <menuitem action="action_payment_method_type" id="menu_payment_method_type" parent="account.account_account_menu" sequence="25" groups="account.group_account_manager"/>


    </data>
</odoo>