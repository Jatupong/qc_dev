<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
            id="report_purchaseorder_document"
            inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//table[1]/thead/tr//th[last()]" position="before">
            <th class="text-right">
                <strong>Disc. (%)</strong>
            </th>
        </xpath>
        <xpath expr="//td[span[@t-field='line.price_subtotal']]" position="before">
            <td class="text-right">
                <span t-field="line.discount" />
            </td>
        </xpath>

        <xpath expr="//table[1]/thead/tr//th[3]" position="replace">
            <th name="th_date_req" class="text-center"><strong>Expected Arrival</strong></th>
        </xpath>


        <xpath expr="//p[@t-field='o.notes']" position="after">
            <t t-if="line.state == 'purchase'">
                <!--<br/>-->
                <div class="last-page">
                    <table width="100%" style="border:1px solid white;">
                        <tr>
                            <td width="33%" align="center" style="border:1px solid white;">
                                <br/><br/><br/>
                                <img t-if="line.write_uid.image_signature" t-att-src="image_data_uri(line.write_uid.image_signature)" style="max-height:150px; max-width:150px;" alt="Logo"/>

                                <span>______________________________________</span><br/>
                                <span t-field="line.write_uid"/>

                                <div>
                                    <!--<span>ลายเซ็นต์</span><br/>-->

                                </div>
                            </td>
                            <td width="34%" align="center" style="border:1px solid white;">

                            </td>
                            <td width="33%" align="center" style="border:1px solid white;">

                            </td>
                        </tr>
                    </table>

                </div>
            </t>
        </xpath>
    </template>
</odoo>
