<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--product : inherit form view-->
    <record id="product_template_form_view_set_form" model="ir.ui.view">
        <field name="name">product.template.set.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="is_set"/>
                    <label for="is_set"/>
                </span>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Product Set Lines" name="product_set_lines" attrs="{'invisible': [('is_set','!=',True)]}">
                    <field name="product_set_lines">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="uom_id"/>
                            <field name="product_template_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//group[@name='group_standard_price']" position="inside">
                <field name="logo"/>
                <field name="decorate"/>
            </xpath>

        </field>
    </record>

    <!-- product.logo : form -->
    <record id="view_product_logo_form" model="ir.ui.view">
        <field name="name">product.logo.form</field>
        <field name="model">product.logo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- product.logo : tree -->
    <record id="view_product_logo_tree" model="ir.ui.view">
        <field name="name">product.logo.tree</field>
        <field name="model">product.logo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- product.logo : action -->
    <record id="action_product_logo" model="ir.actions.act_window">
        <field name="name">Product Logo</field>
        <field name="res_model">product.logo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Product Logo : menu -->
    <menuitem
            action="action_product_logo"
            id="menu_product_logo"
            parent="sale.prod_config_main"
            sequence="55"
    />

    <!-- product.decorate : form -->
    <record id="view_product_decorate_form" model="ir.ui.view">
        <field name="name">product.decorate.form</field>
        <field name="model">product.decorate</field>
        <field name="arch" type="xml">
            <form string="Type of production">
                <group>
                    <field name="name" />
                </group>
            </form>
        </field>
    </record>

    <!-- product.decorate : tree -->
    <record id="view_product_decorate_tree" model="ir.ui.view">
        <field name="name">product.decorate.tree</field>
        <field name="model">product.decorate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- product.decorate : action -->
    <record id="action_product_decorate" model="ir.actions.act_window">
        <field name="name">Product Decorate</field>
        <field name="res_model">product.decorate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Product Decorate : menu -->
    <menuitem
            action="action_product_decorate"
            id="menu_product_decorate"
            parent="sale.prod_config_main"
            sequence="55"
    />

</odoo>