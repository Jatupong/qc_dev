<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--res.partner : inherit form view-->
    <record id="product_template_form_view_set_form" model="ir.ui.view">
        <field name="name">product.template.set.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="is_set"/>
                    <label for="is_set"/>
                </span>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Product Set Lines" name="product_set_lines" attrs="{'invisible': [('is_set','!=',True)]}">
                    <field name="product_set_lines">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="uom_id"/>
                            <field name="product_template_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>




</odoo>