<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- department.id : form -->

    <record id="view_container_form" model="ir.ui.view">
        <field name="name">container.id.form</field>
        <field name="model">container.id</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- department.id : tree -->
    <record id="view_container_tree" model="ir.ui.view">
         <field name="name">container.id.tree</field>
        <field name="model">container.id</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <!-- department.id : action -->
    <record id="action_container" model="ir.actions.act_window">
        <field name="name">Container</field>
        <field name="res_model">container.id</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_container_tree"/>
    </record>

    <!-- department.id : menu -->
    <menuitem id="menu_container"
              name="Container"
              parent="sale.menu_sale_config"
              sequence="108"
              action="action_container"/>
</odoo>
