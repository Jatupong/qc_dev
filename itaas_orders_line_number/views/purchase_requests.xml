<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_purchase_request_order_form_number" model="ir.ui.view">
            <field name="name">purchase.request.order.form.number</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='line_ids']" position="before">
                    <field name="is_number_line" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="before">
                    <field name="number" string="No." readonly="1" force_save="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
