<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_manufacturing_orders_form_number" model="ir.ui.view">
            <field name="name">manufacturing.order.form.number</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='move_raw_ids']" position="before">
                    <field name="is_number_line" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='product_id']" position="before">
                    <field name="number" string="No." readonly="1" force_save="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>