<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_move_order_form_number" model="ir.ui.view">
            <field name="name">account.move.order.form.number</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_line_ids']" position="before">
                    <field name="is_number_line" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='sequence']" position="after">
                    <field name="number" string="No." readonly="1" force_save="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
