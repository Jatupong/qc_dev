<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_order_form_number" model="ir.ui.view">
            <field name="name">sale.order.form.number</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']" position="before">
                    <field name="is_number_line" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="after">
                    <field name="number" string="No." optional="show" readonly="1" force_save="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
