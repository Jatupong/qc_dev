<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_loyalty_program_line_tree" model="ir.ui.view">
        <field name="name">loyalty.program.line.tree</field>
        <field name="model">loyalty.program.line</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="program_id"/>
                <field name="date_order"/>
                <field name="date"/>
                <field name="qty"/>
                <field name="qty_done"/>
                <field name="qty_balance"/>
                <field name="ref"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="view_loyalty_program_line_form" model="ir.ui.view">
        <field name="name">loyalty.program.line.form</field>
        <field name="model">loyalty.program.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="program_id" readonly="1"/>
                            <field name="date_order" readonly="1"/>
                            <field name="date" readonly="1"/>
                            <field name="ref" readonly="1"/>
                            <field name="pos_order" readonly="1"/>
                        </group>
                        <group>
                            <field name="qty" readonly="1"/>
                            <field name="qty_done" readonly="1"/>
                            <field name="qty_balance" readonly="1"/>
                            <field name="sale_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_loyalty_program_history" model="ir.actions.act_window">
        <field name="domain">[]</field>
        <field name="name">Loyalty Program History</field>
        <field name="res_model">loyalty.program.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_loyalty_program_history"
              id="menu_loyalty_program_histoty"
              name="Loyalty Program History"
              parent="point_of_sale.pos_config_menu_catalog"
              sequence="93"/>
</odoo>
