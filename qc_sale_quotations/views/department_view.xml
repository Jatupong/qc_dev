<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- department.id : form -->

    <record id="view_department_form" model="ir.ui.view">
        <field name="name">department.id.form</field>
        <field name="model">department.id</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- department.id : tree -->
    <record id="view_department_tree" model="ir.ui.view">
         <field name="name">department.id.tree</field>
        <field name="model">department.id</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <!-- department.id : action -->
    <record id="action_department" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">department.id</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_department_tree"/>
    </record>

    <!-- department.id : menu -->
    <menuitem id="menu_department"
              name="Department"
              parent="sale.menu_sale_config"
              sequence="100"
              action="action_department"/>
</odoo>