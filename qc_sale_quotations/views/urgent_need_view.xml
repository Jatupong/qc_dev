<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- urgent.need : form -->

    <record id="view_urgent_need_form" model="ir.ui.view">
        <field name="name">urgent.need.form</field>
        <field name="model">urgent.need</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- loading.type : tree -->
    <record id="view_urgent_need_tree" model="ir.ui.view">
         <field name="name">urgent.need.tree</field>
        <field name="model">urgent.need</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <!-- loading.type : action -->
    <record id="action_urgent_need" model="ir.actions.act_window">
        <field name="name">Urgent Need</field>
        <field name="res_model">urgent.need</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_urgent_need_tree"/>
    </record>

    <!-- loading.type : menu -->
    <menuitem id="menu_urgent_need"
              name="Urgent Need"
              parent="sale.menu_sale_config"
              sequence="103"
              action="action_urgent_need"/>
</odoo>