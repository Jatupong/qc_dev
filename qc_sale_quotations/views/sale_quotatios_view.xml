<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    res.partner : inherit form view
    <record id="view_sale_order_form_qc_sale_quotations" model="ir.ui.view">
        <field name="name">sale.order.form.qc.sale.quotations</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="department"></field>
                <field name="id_pp"></field>
                <field name="id_po"></field>
                <field name="w_load_product"></field>
                <field name="box_type"></field>
                <field name="download_with"></field>
            </xpath>

            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="correction"></field>
                <field name="currency"></field>
                <field name="container"></field>
                <field name="loading_type"></field>
                <field name="bar_code"></field>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="page_EmMtz" string="Production Note">
                    <group name="group_EmMtz">
                        <group name="group_left">
                            <field name="urgent_need"/>
                            <field name="want_to_deliver"/>
                            <field name="Importance"/>
                            <field name="important_note" string="Important Note"/>
                        </group>
                        <group name="group_right">
                            <field name="special_need" string="ความต้องการพิเศษ">
                                <form string="Sale Quotation Lines">
                                    <tree editable="bottom">
                                        <field name="field_name_1" />
                                        <field name="field_name_2" />
                                        <!-- Add other fields you want to display in the One2many list -->
                                    </tree>
                                </form>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <record id="view_sale_quotation_lines_form" model="ir.ui.view">
        <field name="name">sale.quotation.lines.form</field>
        <field name="model">sale.quotation.lines</field>
        <field name="arch" type="xml">
            <form string="Sale Quotation Lines">
                <sheet>
                    <group>
                        <field name="field_name_1"/>
                        <field name="field_name_2"/>
                        <!-- เพิ่มฟิลด์อื่นๆ ตามความต้องการของคุณ -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>