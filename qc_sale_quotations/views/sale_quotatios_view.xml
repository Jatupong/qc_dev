                        <!--                                        &lt;!&ndash; Add other fields you want to display in the One2many list &ndash;&gt;-->
                        <!--                                    </tree>-->
                        <!--                                </form>-->
                        <!--                            </field>-->
                        <!--                        </group>-->

                        <group name="group_right">
                            <field name="special_need"  string="ความต้องการพิเศษ">
                                <tree editable="button">
                                    <field name="Description" />
                                </tree>
                            </field>
                        </group>

                    </group>
                </page>
            </xpath>


        </field>
    </record>


