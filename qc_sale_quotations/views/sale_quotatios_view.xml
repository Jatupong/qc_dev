<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    res.partner : inherit form view
    <record id="view_sale_order_form_qc_sale_quotations" model="ir.ui.view">
        <field name="name">sale.order.form.qc.sale.quotations</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="department"/>
                <field name="id_pp"/>
                <field name="id_po"/>
                <label for="w_load_product_week" string="Requested Week"/>
                <div name="w_load_product_week">
                    <field name="w_load_product" class="oe_inline" placeholder="Week" readonly="1"/>
                    <span>&amp;nbsp;</span>
                    <field name="w_load_product_week" class="oe_inline" placeholder="Date"/>
                </div>
                <field name="box_type"/>
                <field name="download_with"/>
            </xpath>

            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="correction"/>
                <field name="currency"/>
                <field name="container"/>
                <field name="loading_type"/>
                <field name="bar_code"/>
                <field name="partner_bank_id"/>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="page_EmMtz" string="Production Note">
                    <group name="group_EmMtz">
                        <group name="group_left">
                            <field name="urgent_need"/>
                            <field name="want_to_deliver"/>
                            <field name="Importance"/>
                            <field name="important_note" string="Important Note"/>
                        </group>

                        <!--                        <group name="group_right">-->
                        <!--                            <field name="special_need" string="ความต้องการพิเศษ">-->
