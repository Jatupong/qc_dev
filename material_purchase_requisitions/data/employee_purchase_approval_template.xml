<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="email_purchase_requisition_iruser_custom" model="mail.template">
            <field name="name">Department Approval Purchase Requisition - Send by Email</field>
            <field name="email_from">{{object.approve_manager_id.work_email}}</field>
            <field name="subject">Department Approval Purchase Requisition - {{object.name}}</field>
            <field name="email_to">{{object.employee_id.work_email}}</field>
            <field name="model_id" ref="material_purchase_requisitions.model_material_purchase_requisition"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[

            <div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; "-->
            Dear <t t-out="object.employee_id.name or ''" data-oe-t-inline="true" style="box-sizing:border-box;" contenteditable="false">Employee</t>

                <p style="margin:0px;box-sizing:border-box;font-size:13px;">Your Purchase Requistion - <t t-out="object.name or ''" data-oe-t-inline="true" style="box-sizing:border-box;" contenteditable="false"></t>is approved by department.</p>
                <p style="margin:0px;box-sizing:border-box;font-size:13px;">Thank you,</p>
                <br style="box-sizing:border-box;">
            </div>


            ]]></field>
        </record>

    </data>
</odoo>
